<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="add genre table" author="mateuszj">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="genres"/>
            </not>
        </preConditions>
        <createTable tableName="genres">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="insert values into genres table" author="mateuszj">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="genres"/>
        </preConditions>
        <sql>
            INSERT INTO genres (name)
            SELECT DISTINCT genre FROM books;
        </sql>
    </changeSet>

    <changeSet id="create booksGenres table" author="mateuszj">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="booksGenres"/>
            </not>
        </preConditions>
        <createTable tableName="booksGenres">
            <column name="bookId" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="genreId" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="booksGenres" columnNames="bookId, genreId" constraintName="ck_bookGenres"/>

        <addForeignKeyConstraint baseTableName="booksGenres" baseColumnNames="bookId"
                                 referencedTableName="books" referencedColumnNames="id"
                                 constraintName="fk_bookGenres_book"/>
        <addForeignKeyConstraint baseTableName="booksGenres" baseColumnNames="genreId"
                                 referencedTableName="genres" referencedColumnNames="id"
                                 constraintName="fk_bookGenres_genre"/>
    </changeSet>

    <changeSet id="add values into booksGenres table" author="mateuszj">
        <sql>
            INSERT INTO booksGenres (bookId, genreId)
            SELECT b.id, g.id
            FROM books b
            INNER JOIN genres g ON b.genre = g.name;
        </sql>
    </changeSet>
</databaseChangeLog>